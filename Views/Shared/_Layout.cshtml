<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dinolab</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <a href="#"><div class="navbar-brand"></div></a>
                <ul class="navbar-nav">
                    <li>
                        <a href="#" class="nav-link" id="loginBtn">Login</a>
                    </li>
                    <li>
                        <button class="button button-primary" id="regBtn">Register</button>
                    </li>
                    
                </ul>
            </div>
        </nav>
        <div id="loginModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2 style="margin-top: 2rem; margin-bottom: 2rem">Login</h2>
                <form>
                    <div class="input-container">
                        <input type="email" class="input-field" placeholder="email">
                        <span class="material-icons">email</span>
                    </div>
                    <div class="input-container">
                        <input type="password" class="input-field" placeholder="password">
                        <span class="material-icons">vpn_key</span>
                    </div>
                    <button style="padding: 15px 40px 15px 40px; margin-bottom: 2rem" class="button button-primary">OK</button>
                </form>
                <p>You didn't have an account? <a href="#" id="regLink">click here to Register</a></p>
            </div>
        </div>
        <div id="regModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2 style="margin-top: 2rem; margin-bottom: 2rem">Register</h2>
                <form>
                    <div class="input-container">
                        <input type="text" class="input-field" placeholder="name">
                        <span class="material-icons">people</span>
                    </div>
                    <div class="input-container">
                        <input type="email" class="input-field" placeholder="email">
                        <span class="material-icons">email</span>
                    </div>
                    <div class="input-container">
                        <input type="password" class="input-field" placeholder="password">
                        <span class="material-icons">vpn_key</span>
                    </div>
                    <button style="padding: 15px 40px 15px 40px; margin-bottom: 2rem" class="button button-primary">OK</button>
                </form>
                <p>You already have an account <a href="#" id="loginLink">click here to Login</a></p>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
            Copyright &copy; 2021 Dinolab. All Right Reserved
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
