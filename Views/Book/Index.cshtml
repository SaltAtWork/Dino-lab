<div class="item-info">
    <div class="item-image"></div>
    <div class="item-detail">
        <p>อุปกรณ์ : Arduino </p>
        <form>
            <label for="inputNum">จำนวน : </label>
            <input id="inputNum" type="number"  min="1" max="10" value="1">
            <br><br>
            <label for="inputDay">วันที่ยืม : </label>
            <input id="inputDay" type="date" onfocus="setInputDate()">
            <br><br>
            <label for="inputTime">เวลาที่ยืม : </label>
            <input id="inputTime" type="time" min="09:00" max="15:00" required>
            <input type="button" name="time" onclick="timeStepUp()" value="เพิ่ม">
            <input type="button" name="time" onclick="timeStepDown()" value="ลด">
            <br><br>
            <label for="inputHr">จำนวนชั่วโมงที่ยืม : </label>
            <input id="inputHr" type="number" min="1" max="7" value="1">
            <br><br>
            <input id="inputSubmit" type="submit" value="ยืมอุปกรณ์" style="align-self: flex-end;" class="button button-primary">
        </form>
    </div>
</div>

